<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Insert title here</title>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	<style type="text/css">
	
	</style>
	<script type="text/javascript">
	
    $(function(){
       $('#event_date').datepicker({
          dateFormat: "yy년mm월dd일"
       });
       
       
       $('#dialog').dialog({
          autoOpen: false,  //자동팝업 안되게막을거임
          show: {effect: "blind",duration: 2000}, //나타날때는 블라인드, 시간은 2초 
          hide: {effect: "explode",duration: 1000}, //조각조각 없어지는 효과낼수있음
          buttons: { //밑에다가 각각 프로퍼티 만든거임
             
                      "submit":function(){
                         let eventname= $('#event_name').val();
                         let evendate = $('#event_date').val();
                         
                         $('<h3></h3>').html(eventname+" : "+evendate).appentTo('#output')
                         //h3태그안에 html집어넣고 #output에 붙이겠다
                         
                         $('#diolog').dialog('close'); //닫겠다
                      },
                      
                      "reset":function(){  //다시 입력가능하게 초기화
                         $('#event_name').val('');
                         $('#event_date').val('');
                      },
                      
                      "cancel":function(){  //다시 입력가능하게 초기화
                         $('#event_name').val('');
                         $('#event_date').val('');
                         $('#diolog').dialog('close');
                      }
                      
                      
                      
                      "취소":function(){
                         $('#this').dialog('close')  //누르면 닫겠다 이거임
                      }
                },
          
//           resizable: false, //크기 안줄어든다
          modal: true//팝업 닫기전까지는 부모창 작업 불가
       });
       
       
       $('#opener').click(function(){
          $('#dialog').dialog('open');  //클릭이벤트 걸기
       });   
       
    
    });      
 </script>
	
</head>
<body>
	<h3 id="open_button">일정생성</h3>
	<hr>
	<div id="output"></div>

	<!-- POPUP DIV  -->
	<div id="dialog" title="팝업창">
  		<h3>일정만들기</h3>
  		<label for="event_name">일정이름</label>
  		<input type="text" id="event_name"><br>
  		<label for="event_date">일정날짜</label>
  		<input type="text" id="event_date" readonly><br>
  		
	</div>
</body>
</html>




