package kr.or.bit;

public class Ppt5_3 {
	int[] answer = {1,4,4,3,1,4,4,2,1,3,2};
	int[] g = new int[] {};
	int[] g2 = new int[] {};
	int[] g3 = new int[] {};
	int[] g4 = new int[] {};
	
	public void starAnswer() {
		for(int i = 0; i <answer.length; i++) {
			if(answer[i] == 1) {
				System.out.print("*");
				System.out.println();
			}else if(answer[i] == 2) {
				System.out.print("-");
				System.out.println();
			}else if(answer[i] == 3) {
				System.out.print("*");
				System.out.println();
			}else {
				System.out.print("*");
				System.out.println();
			}
		}
	}
	
	public void starAnswer2() {
		for(int i = 0; i<answer.length; i++) {
			for(int j =0; j< g.length; j++) {
				if(answer[i] == 1) {
					g[j] = answer[i];
					for(int k=0;k<g.length;k++) {
						System.out.println("*");
					}
				}else if(answer[i] == 2) {
					g2[j] = answer[i];
				}else if(answer[i] == 3) {
					g3[j] = answer[i];
				}else {
					g4[j] = answer[i];
				}
			}
		}
	}
	
	public void showStar() {
		System.out.print("1 ");
		for(int i=0;i<g.length;i++) {
			System.out.println("*");
		}
	}
	

}
