package kr.or.bit;

public class Ppt5_3 {
	int[] answer = {1,4,4,3,1,4,4,2,1,3,2};
	int[] g = new int[4];
	int[] g2 = {0,0,0,0};
	int[] g3 = {0,0,0,0};
	int[] g4 = {0,0,0,0};

	public void starAnswer2() {
		for(int i = 0; i<answer.length; i++) {
				if(answer[i] == 1) {
					for(int q = 0; q<g.length ; q++) {
						g[q] = answer[i];
					}
					
				}else if(answer[i] == 2) {
					for(int q = 0; q<g.length ; q++) {
						g2[q] = answer[i];
					}
				}else if(answer[i] == 3) {
					for(int q = 0; q<g.length ; q++) {
						g3[q] = answer[i];
					}
				}else {
					for(int q = 0; q<g.length ; q++) {
						g4[q] = answer[i];
					}
				}
			}
		
		for(int a : g) {
			System.out.println(a + " / ");
		}
		
		
		System.out.print("1");
		for(int j = 0; j<g.length;j++) {
			System.out.print("*");
		}
		System.out.println();
		
		System.out.print("2");
		for(int j = 0; j<g2.length;j++) {
			System.out.print("*");
		}
		System.out.println();
		
		System.out.print("3");
		for(int j = 0; j<g3.length;j++) {
			System.out.print("*");
		}
		System.out.println();
		
		System.out.print("4");
		for(int j = 0; j<g4.length;j++) {
			System.out.print("*");
		}
		
		}
	
	


}
