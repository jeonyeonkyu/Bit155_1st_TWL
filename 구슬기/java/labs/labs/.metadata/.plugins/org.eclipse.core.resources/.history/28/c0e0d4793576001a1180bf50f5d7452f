package kr.or.bit;

public class Ppt5_3 {
	int[] answer = {1,4,4,3,1,4,4,2,1,3,2};
	int g = 0;
	int g2 = 0;
	int g3 = 0;
	int g4 = 0;
	
	public void starAnswer() {
		for(int i = 0; i <answer.length; i++) {
			if(answer[i] == 1) {
				System.out.print("*");
				System.out.println();
			}else if(answer[i] == 2) {
				System.out.print("-");
				System.out.println();
			}else if(answer[i] == 3) {
				System.out.print("*");
				System.out.println();
			}else {
				System.out.print("*");
				System.out.println();
			}
		}
	}
	
	public void starAnswer2() {
		for(int i = 0; i<answer.length; i++) {
				if(answer[i] == 1) {
					g++;
				}else if(answer[i] == 2) {
					g2++;
				}else if(answer[i] == 3) {
					g3++;
				}else {
				    g4++;
				}
			}
		System.out.println(g);
		}
	
	


}
